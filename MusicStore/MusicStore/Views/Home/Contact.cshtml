
@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout2";
}


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Contactează-ne</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index">Acasă</a>
                        <span>Contact</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Telefon</h4>
                    <p>0720 720 720</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Adresa</h4>
                    <p>Strada Lalelelor 420G, București</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Orar</h4>
                    <p>10:00 am - 20:00 pm</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>contact@mihuimusicstore.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->

<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Lasă-ne un mesaj</h2>
                </div>
            </div>
        </div>
        <form action="#">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <input type="text" placeholder="Numele dumneavoastră">
                </div>
                <div class="col-lg-6 col-md-6">
                    <input type="text" placeholder="Email-ul dumneavostră">
                </div>
                <div class="col-lg-12 text-center">
                    <textarea placeholder="Mesajul dumneavoastră"></textarea>
                    <button type="submit" class="site-btn">TRIMITE</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Contact Form End -->